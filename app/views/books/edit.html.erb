<h2>Editing Book</h2>
<% if @book.errors.any? %>
  <div class = "alert alert-warning">
    <ul><% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@book) do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Opinion</p>
  <%= f.text_area :body %>
  <br>
  <button type="submit" class="btn btn-primary">Update Book</button>
  <br>
  <%= link_to "Show",book_path(@book) %>
  <%= link_to "Back",books_path %>
<% end %>