<div class="container"> 
  <div class="row">
    <div class="col-xs-3">
     <h3>User info</h3>
      <table class="table">
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img pull-left profile-img", fallback: "no_image.jpg" %>
        <tr><td>name</td><td><%= @user.name %></td></tr>
        <tr><td>introduction</td><td><%= @user.introduction %></td></tr>
      </table>
        <% if @user.id == current_user.id %>
          <%= link_to edit_user_path(@user) do %>
            <button type="button" class="btn btn-default btn-block"><p class="glyphicon glyphicon-wrench" aria-hidden="true"></p></button>
          <% end %>
        <% end %>

<h3>New book</h3>
<% if @book.errors.any? %>
  <div class = "alert alert-warning">
    <ul><% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@book) do |f| %>

  <p>Title</p>
  <%= f.text_field :title, class: "new-title" %>

  <p>Opinion</p>
  <%= f.text_area :body, class: "new-body" %>
  <br>
  <%= f.submit "Create Book",class:"btn btn-primary btn-block" %>

<% end %>
</div>

<div class="col-xs-9">
<h1>Books</h1>
<table class="table">
  <thead>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
     <td>
      <%= link_to(user_path(book.user)) do %>
        <%= attachment_image_tag(book.user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img pull-left profile-img", fallback: "no_image.jpg") %>
      <% end %>
     </td>
     <td><%= link_to book.title,book_path(book) %></td>
     <td><%= book.body %></td>
     <td>
      <% if @book.favorited_by?(current_user) %>
            <%= link_to book_favorites_path(book), method: :delete do %>
              <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
              <%= @book.favorites.count %> いいね
            <% end %>
        <% else %>
            <%= link_to book_favorites_path(book), method: :post do %>
              <i class="fa fa-heart-o" aria-hidden="true"></i>
              <%= @book.favorites.count %> いいね
            <% end %>
       <% end %>
     </td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
</div>
</div>