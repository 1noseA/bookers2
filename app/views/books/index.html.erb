<h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Opinion</th>
  </tr>

  <% @books.each do |book| %>
    <tr>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
    </tr>
  <% end %>

</table>

<h3>New book</h3>
<% if @book.errors.any? %>
  <div class = "alert alert-warning">
    <ul><% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@book) do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>

  <p>Opinion</p>
  <%= f.text_area :body %>
  <br>
  <%= f.submit 'Create Book' %>

<% end %>
