<div class="container"> 
  <div class="row">
    <div class="col-xs-3">
     <h3>User info</h3>
      <table class="table">
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
        <tr><td>name</td><td><%= @user.name %></td></tr>
        <tr><td>introduction</td><td><%= @user.introduction %></td></tr>
      </table>
        <% if @user.id == current_user.id %>
          <%= link_to edit_user_path(@user) do %>
            <button type="button" class="btn btn-default btn-block"><p class="glyphicon glyphicon-wrench" aria-hidden="true"></p></button>
          <% end %>
        <% end %>

<h3>New book</h3>
<% if @book.errors.any? %>
  <div class = "alert alert-warning">
    <ul><% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<form>
  <div class="form-group">
    <label for="title">Title</label>
    <input type="title" class="form-control" id="title">
  </div>
  <div class="form-group">
    <label for="body">Opinion</label>
    <input type="body" class="form-control" id="body">
  </div>
  <button type="submit" class="btn btn-primary">Create Book</button>
</form>
</div>

<div class="col-xs-9">
<h1>Books</h1>
<table class="table">
  <thead>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
     <td>
      <%= link_to(user_path(book.user)) do %>
        <%= attachment_image_tag(book.user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg") %>
      <% end %>
     </td>
     <td><%= link_to book.title,book_path(book) %></td>
     <td><%= book.body %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
</div>
</div>