<div class="container">
  <div class="row">
    <div class="col-xs-3">
    <h3 class="profile-name">User info</h3>
    <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
    <p>name<%= @book.user.name %></p> 
    <p>introduction<%= @book.user.introduction %></p>
    <% if @book.user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@book.user), class: "pull-right" %></p>
    <% end %>

<h3>New book</h3>
<% if @book.errors.any? %>
  <div class = "alert alert-warning">
    <ul><% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@book) do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>

  <p>Opinion</p>
  <%= f.text_area :body %>
  <br>
  <button type="submit" class="btn btn-primary">Create Book</button>

<% end %>
</div>

<div class="col-xs-9">
<h1>Book detail</h1>
<table class="table table-striped">
  <tbody>
   <tr>
     <td>
      <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
      <%= link_to @book.user.name,user_path(@book.user_id) %>
      </td>
     <td><%= @book.title %></td>
     <td><%= @book.body %></td>
    <% if @book.user == current_user %>
     <td>
      <%= link_to edit_book_path(@book) do %>
        <button type="button" class="btn btn-success">Edit</button>
      <% end %>
     </td>
     <td>
      <%= link_to book_path(@book),method: :delete, data: {confirm: 'Are you sure?'} do %>
       <button type="button" class="btn btn-danger">Destroy</button>
      <% end %>
     </td>
    <% end %>
   </tr>
  </tbody>
</table>
</div>
</div>
</div>