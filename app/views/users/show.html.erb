<div class="container"> 
  <div class="row">
    <div class="col-xs-3">
      <h3>User info</h3>
        <%= render 'users/user_info', user: @user %>

<h3>New book</h3>
<% if @book.errors.any? %>
  <div class = "alert alert-warning">
    <ul><% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@book) do |f| %>

  <p>Title</p>
  <%= f.text_field :title, class: "new-title" %>

  <p>Opinion</p>
  <%= f.text_area :body, class: "new-body" %>
  <br>
  <%= f.submit "Create Book",class:"btn btn-primary btn-block" %>

<% end %>
</div>

<div class="col-xs-9">
<%= render 'search/search' %>
<h1>Books</h1>
<table class="table">
  <thead>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
     <td>
      <%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img pull-left profile-img", fallback: "no_image.jpg" %></td>
     <td><%= link_to book.title,book_path(book) %></td>
     <td><%= book.body %></td>
     <td>
        <p>コメント数:<%= book.book_comments.count %></p>
      </td>
    </tr>
   <% end %>
  </tbody>
</table>
</div>
</div>
</div>