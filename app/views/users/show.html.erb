<div class="container"> 
  <div class="row">
    <div class="col-lg-4">
    <h3 class="profile-name">User info</h3>
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %><br>
    <p>name<%= @user.name %></p> 
    <p>introduction<%= @user.introduction %></p><br>
<% if @user.id == current_user.id %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user), class: "pull-right" %></p>
<% end %>

<h3>New book</h3>
<% if @book.errors.any? %>
  <div class = "alert alert-warning">
    <ul><% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@book) do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>

  <p>Opinion</p>
  <%= f.text_area :body %>
  <br>
  <%= f.submit 'Create Book' %>

<% end %>
</div>

<div class="col-lg-8">
<h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Opinion</th>
  </tr>

  <% @books.each do |book| %>
    <tr>
     <td>
      <%= image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
    </tr>
  <% end %>

</table>
</div>