<div class="container"> 
  <div class="row">
    <div class="col-xs-3">
    <h3>User info</h3>
    <%= render 'users/user_info', user: @user %>

	<h3>New book</h3>
	<% if @book.errors.any? %>
	  <div class = "alert alert-warning">
	    <ul><% @book.errors.full_messages.each do |message| %>
		  <li><%= message %></li>
		<% end %>
		</ul>
	  </div>
	<% end %>

    <%= form_for(@book) do |f| %>

	  <p>Title</p>
	  <%= f.text_field :title, class: "new-title" %>

	  <p>Opinion</p>
	  <%= f.text_area :body, class: "new-body" %>
	  <br>
	  <%= f.submit "Create Book",class:"btn btn-primary btn-block" %>

	<% end %>
    </div>

    <div class="col-xs-9">
    <h1>Users</h1>
      <table class="table">
		<thead>
		    <tr>
			  <th>image</th>
			  <th>name</th>
			  <td></td>
		    </tr>
		</thead>
		<tbody>
		  <% @users.each do |user| %>
		    <tr>
		      <td>
			    <%= attachment_image_tag(user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img pull-left profile-img", fallback: "no_image.jpg") %>
			  </td>
			  <td><%= user.name %></td>
		      <td><%= link_to "Show",user_path(user) %></td>
		    </tr>
		  <% end %>
		</tbody>
      </table>
    </div>
  </div>
</div>